/* pages/site/consulting/consulting.wxss */
@import '../template/template.wxss';
page {
  background: #f0f0f0;
}

.pretable {
  padding: 0 30rpx;
  font-size: 28rpx;
}

.distr {
  font-size: 28rpx;
  background-color: #fff;
  box-shadow: #dedede 0px 0px 8px;
  border-radius: 8rpx;
}

.distr {
  margin-top: 20rpx;
}

.distr .distd {
  padding: 0 20rpx;
  height: 90rpx;
  background-color: #fff;
  line-height: 90rpx;
  display: flex;
  flex-flow: row;
}

.boder {
  border-bottom: #dedede 1rpx solid;
}

.prerow {
  width: 15%;
}

.prerow2 {
  width: 80%;
  text-align: left;
}

.cotip {
  width: 5%;
  text-align: right;
}

.itemImage {
  width: 20rpx;
  height: 25rpx;
  margin-top: 20rpx;
}

.integInput {
  border: none;
  display: inline-block;
  line-height: 90rpx;
  height: 90rpx;
  padding-left: 20rpx;
  width: 100%;
}

.datePick {
  height: 40rpx;
}

.picker {
  font-size: 28rpx;
  height: 55rpx;
}

.refund-desc {
  width: 90%;
  height: 200rpx;
  margin: 0 auto;
  border-radius: 8rpx;
  border: 1rpx #d9d9d9 solid;
  text-align: left;
  padding: 10rpx;
}

.des {
  padding: 20rpx;
}

.consultBottom {
  margin-top: 100rpx;
  font-size: 28rpx;
}

.coutip {
  color: #999;
  text-align: right;
  padding: 10rpx 0;
}

.coubtn {
  margin-top: 0;
}

/*弹窗样式*/
.commodity_screen {
  background-color: rgba(0, 0, 0, 0.7);
  width: 100%;
  height: 100%;
  opacity: 0.5;
  position: fixed;
  z-index: 666;
  bottom: 0;
}

.coupon_area {
  min-height: 600rpx;
  max-height: 800rpx;
  position: fixed;
  z-index: 888;
  bottom: 0;
  width: 100%;
  overflow-y: auto;
}
.coupon_area {
  background-color: #fff;
}

.display-block {
  display: block !important;
}

.display-none {
  display: none !important;
}

.couponTitle {
  position:relative;
  top: 0;
  width: 100%;
  padding: 20rpx 0;
}

.coupon_tip {
  font-size: 30rpx;
  text-align: center;
}

.coupon_no {
  text-align: center;
}

.couponClose {
  width: 30rpx;
  height: 30rpx;
  position: absolute;
  top: 0;
  right: 0;
}

.couponClose {
  padding: 20rpx;
}

.coupon_no {
  text-align: center;
}

.coupon_no image {
  width: 165rpx;
  height: 179rpx;
  margin-top: 60rpx;
}

.couponDome {
  height: 600rpx;
  margin-top:30rpx;
  text-align: center;
}
.storeCenter{
  width:80%;
  text-align: left
}
.goIcon{
width: 32rpx;
 height:32rpx;
 margin-top:50rpx
}
.storeOne{
  padding:20rpx 24rpx
}