/* pages/site/discover/discover.wxss */
@import '../template/template.wxss';
page {
  background: #f5f5f5;
}
.distop {
  padding: 20rpx 24rpx;
  background: #fff;
  position: fixed;
  top: 0;
  z-index: 1024;
  overflow: hidden;
}
.distab {
  padding: 0;
  text-align: center;
  display: flex;
  flex-direction: column;
  display: -webkit-box;
}
.tabOne {
  width: auto;
  text-align: center;
  font-size: 28rpx;
  color: #666;
  margin: 0 50rpx 0 0;
  padding: 6rpx 0;
}
.tavtive {
  color: #666;
  border-bottom: 1rpx solid #666;
}
.discontent {
  margin-top: 90rpx;
}
.topImg {
  width: 100%;
  height: 350rpx;
  position: relative;
  margin-bottom:20rpx
}
.topImg image {
  width: 100%;
  height: 350rpx;
}
.infoList {
  width: 100%;
}
.disone {
  margin-bottom: 10rpx;
  background-color: #fff;
}
.info {
  display: flex;
  flex-direction: row;
  padding: 20rpx 30rpx;
  height: 180rpx;
}

.infoletf {
  width: 70%;
  position: relative;
}

.inforight {
  width: 30%;
  text-align: right;
}

.inforight image {
  width: 180rpx;
  height: 180rpx;
}

.title {
  font-size: 30rpx;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  word-break: break-all;
}

.disbottom {
  font-size: 24rpx;
  color: #999;
  position: absolute;
  left: 0;
  bottom: 0;
  display: flex;
  flex-flow: row;
}

.disread {
  margin-right: 30rpx;
}

.ydImg {
  width: 26rpx;
}

.hfImg {
  width: 26rpx;
}

.dzImg {
  width: 26rpx;
}

.tab-image {
  width: 316rpx;
}

/*底层*/
.tuwen-mb {
  width: 97%;
  background: rgba(0, 0, 0, 0.5);
  position: absolute;
  max-width: 100%;
  display: block;
  margin: 0;
  bottom: 0;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.tuwen-mb {
  height: 88rpx;
  line-height: 80rpx;
  color: #fff;
  font-size: 28rpx;
  padding: 0 10rpx;
}
