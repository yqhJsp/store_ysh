/* pages/mall/message/message.wxss */

.view-message { 
        width: 100%;
        position: relative;
        background-color: #f5f5f5;
        height: auto;
        color:#333;
}

.tab-content1{
  /* min-height:900rpx;
  max-height:1020rpx; */
  flex-direction: column;
  align-items: center;
  vertical-align:middle;
  text-align:center;
}
.tab-image{
margin-top: 130rpx;
margin-bottom: 50rpx;
width:294rpx;
height:236rpx;
}

.view-message .view-message-table {
        position: relative;
        padding-left: 0;
        width: 100%;
        margin-top: 0;
        margin-bottom: 0;
        list-style: none;
        background-color: #fff;
}

.view-message .view-message-table .view-table-cell {
        margin-top:10rpx;
        position: relative;
        padding: 20rpx 20rpx;
        overflow: hidden;
        background-color: inherit;
        border-bottom: 1rpx solid #c8c7cc;
}
.view-message-top{
  height:50rpx;
  clear:both;
  line-height:50rpx
}
 .view-message-top .view-message-title {
        width:70%;
        float:left;
        font-size: 32rpx;
        -webkit-line-clamp: 1;
        -webkit-box-orient: vertical;
        text-overflow: ellipsis;
        -o-text-overflow: ellipsis;
        -webkit-text-overflow: ellipsis;
        -moz-text-overflow: ellipsis;
}
 .view-message-top .view-message-date{
  width:30%;
  font-size: 28rpx;
  text-align:right;
  color: #8F8F94;
}
.view-table-cell .view-message-content{
 min-height: 10rpx;
 word-break: break-all;
 font-size:28rpx;
 padding-top:10rpx
}
.view-ellipsis-2 {
    display: -webkit-box;
    overflow: hidden;
    text-overflow: ellipsis;
    word-wrap: break-word;
    white-space: normal;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}
.view-media-body {
    text-align: center;
    margin:30rpx 0 20rpx 0;
}
.view-btn {
 width:200rpx;
 font-size:28rpx;
 color: #dd524d;
 border: 1px solid #dd524d;
 background-color:#fff;
}
 .view-hoverbtn,.active{
  color: #fff;
 background-color:#dd524d;
 border: 1px solid #dd524d;    
}