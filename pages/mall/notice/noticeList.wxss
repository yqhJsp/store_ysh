/* pages/mall/notice/noticeList.wxss */
.view-message {
        width: 100%;
        position: relative;
        background-color: #f5f5f5;
        height: auto;
        color:#333;
}

.view-message .view-message-table {
        position: relative;
        padding-left: 0;
        width: 100%;
        margin-top: 0;
        margin-bottom: 0;
        list-style: none;
        background-color: #fff;
}

.view-message .view-message-table .view-table-cell {
        margin-top:10rpx;
        position: relative;
        padding: 20rpx 20rpx;
        overflow: hidden;
        background-color: inherit;
        border-bottom: 1rpx solid #c8c7cc;
}
.view-message-top{
  height:50rpx;
  display:flex;
  flex-flow:row;
  line-height:50rpx
}
 .view-message-top .view-message-title {
        width:66%;
        font-size: 32rpx;
        -webkit-line-clamp: 1;
        -webkit-box-orient: vertical;
        text-overflow: ellipsis;
        overflow:hidden;
        display: -webkit-box;
}
 .view-message-top .view-message-date{
  width:34%;
  font-size: 28rpx;
  text-align:right;
  color: #8F8F94;
}
.view-table-cell .view-message-content{
 min-height: 10rpx;
 word-break: break-all;
 font-size:28rpx;
 padding-top:10rpx
}
.view-ellipsis-2 {
    display: -webkit-box;
    overflow: hidden;
    text-overflow: ellipsis;
    word-wrap: break-word;
    white-space: normal;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}
.view-media-body {
    text-align: center;
    margin:30rpx 0 20rpx 0;
}
.view-btn {
 width:200rpx;
 font-size:28rpx;
 color: #dd524d;
 border: 1px solid #dd524d;
 background-color:#fff;
}
.view-hoverbtn,.active{
  color: #fff;
 background-color:#dd524d;
 border: 1px solid #dd524d;    
}