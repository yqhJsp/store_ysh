/* pages/mall/list/shopList.wxss */
/*搜索栏*/
page{  
  background:#f5f5f5;  
}  
.tab-content1
{
  display:block;
  min-height:900rpx;
  max-height:1020rpx;
  flex-direction: column;
  align-items: center;
  text-align:center
}
.tab-image
{
margin-top: 150rpx;
width:310rpx;
height:236rpx;
}
.view_search{
    padding: 10rx;
    z-index: 100;
    height:100rpx;
    width:100%;
    position: fixed;
    clear:both;
    background:#f5f5f5; 
}
.mall-search {
    float: left;
}
.view_search .view-left-search {
    height:58rpx;
    text-align: left;
    border-radius:52rpx;
    background:#fff;
    position: absolute;
    overflow: hidden;
    z-index: 1;
    top: 20rpx;
    right: 0;
    bottom: 0;
    width: 83%;
    left:20rpx;
}
.view_search .view-left-search .search{
    height:58rpx;
    width:80%;
    border: 0;
    color:#333;
    font-size:28rpx;
    padding:0 15rpx;
    line-height:58rpx 
}
.view_search .view-left-search .mall-icon-search {
    width: 25rpx;
    margin:10rpx 20rpx;
    float: left;
}
.view_search .view-left-search .mall-icon-search  image{
 width:37rpx;
height:38rpx;        
}
.view_search .view_megase{
    width:17%;
    float: right;
    text-align:center;
    height:100rpx;
    padding-top:30rpx
}
.view_search .view_megase .messageIcon{
   width:44rpx;
  margin-top:0;
  height:44rpx; 
  margin-left:20rpx     
}
.scrollview-list {
  margin-top: 80rpx;
}
/*商品列表*/
.shop-scroll {
    position: absolute;
    z-index: 1;
    width: 100%;
    -webkit-transform: translateZ(0);
    transform: translateZ(0);
    backface-visibility: hidden;
     top:90rpx
}
.shopbottom{
  padding:0 10rpx
}
.mall_groups, .shoplist {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
}
.shoplist{
 padding: 10rpx;      
}
.shoplist .mall-one {
    width:360rpx;
    display:inline-block;
    height:454rpx;
    overflow:hidden;
    flex-wrap: wrap;
    box-shadow: #929292;
    background-color: #fff;
    margin-bottom: 10rpx;
    padding-bottom:10rpx
}
.shoplist .mall-one .shopImg {
    position: relative;
    padding: 10rpx;
    height:340rpx;
    overflow: hidden;
    text-align: center;
}
.shoplist .mall-one .shopImg image{
     width:100%;
     height:340rpx;  
}
.shoplist .mall-one .mall-listword {        
display:block;
font-size:28rpx;
text-align:left;
overflow:hidden;
white-space:nowrap;
margin:10rpx 0;
text-overflow:ellipsis;
}
.shop-prive {
  font-size:28rpx;
  clear:both
}
.fl{
float:left
}
.fr{
float:right
}
.privefont {
    color: #E4393C;
}
.kucun {
    color: #8f8f94;
}
/*  加载更多   */
.weui-loading {
  margin: 0 5px;
  width: 20px;
  height: 20px;
  display: inline-block;
  vertical-align: middle;
  -webkit-animation: weuiLoading 1s steps(12, end) infinite;
  animation: weuiLoading 1s steps(12, end) infinite;
  background: transparent url(data:image/svg+xml;base64,) no-repeat;
  background-size: 100%;
}
.weui-loadmore {
  width: 65%;
  margin: 1.5em auto;
  line-height: 1.6em;
  font-size: 28rpx;
  text-align: center;
}
.weui-loadmore__tips {
  display: inline-block;
  vertical-align: middle;
}