/* pages/mall/orderDetail/orderDetail.wxss */
page{
  background-color:#f5f5f5      
}
.fr{
    float: right      
}
.row{
   box-sizing: border-box;
   font-size: 28rpx;
   margin-bottom:20rpx    
}
.payname {
    margin-left: 40rpx;
}
.order {
    padding: 0 30rpx;
}
.order-detail {
    margin-top: 20rpx;
    border-bottom: 1rpx #dedede solid;
    border-top: 1rpx #dedede solid;
    background-color: #fff;
    padding: 0 15rpx;
}
.order_table{
  border-right:0;
  width: 100%;
  background-color: #fff
}
.orderth{
  font-size:28rpx;
   color:#333;     
}
.ordertr:not(:first-child){
  width: 100%;
   display: flex; 
   border-top:1rpx solid #dedede;
  justify-content: space-between      
}
.ordertd {
 width: 100%;
   padding:20rpx 0;
   text-align:left;
}
.ortitle{
  width:25%;   
}
.ordertd view{
      
}
.borders{
  border-bottom:1rpx solid #dedede;       
}
/*商品列表*/
.order_one{
    width: 100%;
   display: flex;
   justify-content: space-between          
}
.order_one .navigator{
    height:160rpx;
    width:96%;
    position: relative;
     margin-top:20rpx;   
    border-bottom: 1px solid #DEDEDE;     
}
.product-info-box text{  
  display: block;   
  /*设置文字溢出部分为...*/  
  overflow: hidden;  
  white-space: nowrap;  
  text-overflow: ellipsis;  
} 
.shoptitle{
  font-size:28rpx;       
}
 .pro-img {
    position: absolute;
    height:120rpx;
    width: 120rpx;
    overflow: hidden;
    padding: 10rpx;
    text-align: center;
    border: 1px solid #EDEDED;
}
 .pro-img image{
   height:120rpx;
    width: 120rpx;     
}
.product-info-box {
    -webkit-box-flex: 1;
    margin-left:160rpx;
    height: 100%;
    margin-top: -2px;
    padding-right: 10rpx;
}
.futile {
    margin: 6rpx 0;
    font-size: 24rpx;
    color: #999;
}
.nav_prive{
 position:absolute;
 bottom:20rpx;
 width:70%;
 left:160rpx;
 font-size:28rpx       
}
.red-price{
 color: #f23030;
}
.little-icon {
    color: #9B9B9B;
    margin-left:20rpx;
}
.goback {
    background: #F02804;
    position:relative;
    color: #fff;
    margin:0 auto;
    font-size: 28rpx;
    text-align: center;
    margin-top:50rpx;
    margin-bottom:30rpx;
    width:250rpx;
    height:60rpx;
    padding-top: 0.6rem;
    border-radius: 12px;
}