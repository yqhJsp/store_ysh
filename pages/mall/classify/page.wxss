/* pages/mall/classify/page.wxss */
page{  
  background:#ffffff;  
}  
/*搜索栏*/

.view_search{
    padding: 10rx;
    background:#fff;
    z-index: 100;
    height:100rpx;
    width:100%;
    position:absolute;
    clear:both;
    border-bottom: 1px solid #DEDEDE;
}
.mall-search {
    float: left;
}
.view_search .view-left-search {
    height:58rpx;
    text-align: left;
    border-radius:52rpx;
    background:#f5f5f5;
    position: absolute;
    overflow: hidden;
    z-index: 1;
    top: 20rpx;
    right: 0;
    bottom: 0;
    width: 83%;
    left:20rpx;
}
.view_search .view-left-search .search{
    height:58rpx;
    width:80%;
    border: 0;
    color:#333;
    font-size:28rpx;
    padding:0 15rpx;
    line-height:58rpx 
}
.view_search .view-left-search .mall-icon-search {
    margin:10rpx 20rpx;
    float: left;
}
.view_search .view-left-search .mall-icon-search  image{
  width:37rpx;
  height:38rpx;      
}
.view_search .view_megase{
    width:17%;
    float: right;
   text-align: right;
  padding-right:20rpx;
    height:100rpx;
     padding-top:30rpx
}
.view_search .view_megase .messageImg{
  width:44rpx;
  margin-top:0;
  height:44rpx;          
}
.view_search .view_megase .messageIcon{
  color: #ccc; 
  font-size:40rpx;
}
.upicon{
 color: #999;
 margin:0 5rpx;
font-size:24rpx       
}
/*内容*/
.classify_content{
   width: 100%;
    /* position: absolute; */
   top:100rpx; 
    display: flex;
    flex-flow: row;
    position: relative
}
/*条件*/
.jd-category-content {
   height:70rpx;
    font-size: 12px;
    color: #333;
    background-color: #f5f5f5;
}
.new-search-tab {
    position: relative;
    width: 100%;
    margin: 0;
    height:70rpx;
    background-color: #f5f5f5;
}
.new-change-eleven {
    width: 33%;
    height: 100%;
    border-right: 0;
    -moz-box-sizing: border-box;
    -webkit-box-sizing: border-box;
    box-sizing: border-box;
    display: inline-block;
    text-align: center;
    line-height: 70rpx;
}
.new-change-eleven.active{
    background-color: #fff;
    color:#F35437      
}
.new-change-eleven.active .upicon {
    color:#F35437 
}
.new-change-eleven.active
 /*左侧栏主盒子*/  
.nav_left{  
  display: inline-block;  
  width: 25%;  
  height: 100%;  
}
.nav_left text{
 font-size:28rpx;
   
}
.nav_left .nav_all{
  height:80rpx;
  color:#333;
  width:25%;      
  background: #f5f5f5;  
  text-align: center;         
}  
/*左侧栏list的item*/  
.nav_left .nav_left_items{  
  background: #f5f5f5;
   width:180rpx;
   padding:15rpx 10rpx;      
  text-align: center;
  /* word-wrap:break-word; */
  vertical-align:middle;
  /* overflow:hidden;
white-space:nowrap;
text-overflow:ellipsis; */
}  
/*左侧栏list的item被选中时*/  
.nav_left .nav_left_items.tactive{  
 background: #fff;
 border-left:5rpx solid #F04F39;
}  
/*右侧栏主盒子*/  
.nav_right{   
  /* position: absolute;   */
  top: 0;  
  right: 0;  
  flex: 1;  
  width: 75%; 
  padding:0 10prx;  
  box-sizing: border-box;  
  background: #fff;  
}  
/*右侧栏list的item*/  
.nav_right .nav_right_items{
  width:96%;
  margin:0 auto;        
  height:auto;
}  
.nav_right .nav_right_items .navigator{
    min-height:160rpx;
    display:flex;
    position: relative;
    padding:20rpx 0;   
}
.boder{
  border-bottom: 1px solid #DEDEDE;
}
.nav_right .nav_right_items text{  
  display: block;   
  /*设置文字溢出部分为...*/  
  overflow: hidden;  
  white-space: nowrap;  
  text-overflow: ellipsis;  
} 
.shoptitle{
  font-size:28rpx;       
}
.nav_right .nav_right_items .navigator .pro-img {
    position: relative;
    height:160rpx;
    width: 160rpx;
    overflow: hidden;
    padding: 10rpx;
    text-align: center;
    border: 1px solid #EDEDED;
}
.nav_right .nav_right_items .navigator .pro-img image{
  height:160rpx;
    width: 160rpx;   
}
.nav_right .nav_right_items .navigator .product-info-box {
    -webkit-box-flex: 1;
    height: 100%;
    margin-top: -2px;
    width:60%;
    padding-right: 10rpx;
    padding-left:20rpx
}
.futile {
    margin: 6rpx 0;
    font-size: 24rpx;
    color: #999;
    line-height: 1;
}
.nav_prive{
 position:absolute;
 bottom:20rpx;
 font-size:30rpx       
}
.red-price{
 color: #f23030;
}
.little-icon {
    color: #9B9B9B;
    margin-left:20rpx;
    font-size: 24rpx
}
