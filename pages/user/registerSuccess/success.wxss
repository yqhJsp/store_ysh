/* pages/mall/paySuccess/success.wxss */

.row {
  box-sizing: border-box;
  font-size: 28rpx;
}

.successTop {
  position: relative;
  text-align: center;
  margin-top: 50rpx;
}

.successImg {
  width: 200rpx;
  height: 200rpx;
}

.successMsg {
  font-size: 26rpx;
  color: #666;
}

.success-tip {
  padding: 12rpx 30rpx;
  color: #333;
  font-size: 28rpx;
  text-align: center;
  margin-bottom: 50rpx;
}

.success-tab {
  margin-top: 50rpx;
}

.success-btn {
  display: inline-block;
  padding: 20rpx 40rpx;
  margin-right: 30rpx;
  color: #fff;
  border-radius: 12rpx;
  background-color:#2299ff;
}

.list-title {
  font-size: 28rpx;
  margin: 0 20rpx;
  padding: 0 20rpx;
  border-left: 4rpx solid #f00;
}

.success-list {
  margin-top: 10rpx;
  width: 100%;
}

.mall-contact {
  margin: 10px 0;
}

.mall-one {
  width: 360rpx;
  display: inline-block;
  height: 280rpx;
  overflow: hidden;
  box-shadow: #929292;
  background-color: #fff;
  margin-left: 10rpx;
  margin-bottom: 10rpx;
}

.mall-one .shopImg {
  position: relative;
  text-align: center;
  padding: 10rpx;
}

.mall-one .shopImg image {
  width: 100%;
  height: 200rpx;
}

.shopbottom {
  padding: 0 10rpx;
  display: flex;
  flex-flow: row;
}
.mallLeft{
  width:15%
}
.mallCenter{
  width:50%;
}
.mall-one .mall-listword {
  display: block;
  font-size: 28rpx;
  text-align: left;
  overflow: hidden;
  white-space: nowrap;
  margin: 10rpx 0;
  text-overflow: ellipsis;
}

.shop-prive {
  font-size: 28rpx;
  clear: both;
}

.privefont {
  color: #e4393c;
}

.kucun {
  color: #8f8f94;
}
.checkBox{
   margin-top:0
}
.mallTip{
  font-size:28rpx;
  padding:0 20rpx;
  margin:15rpx 0;
}
.saveBtn {
    background: #45cdc6;
    color: #fff;
    display: block;
    border: 0;
    width:96%;
    margin: 0 auto;
    height: 92rpx;
    margin-top: 50rpx;
    line-height: 92rpx;
    text-align: center;
    font-size: 32rpx;
    border-radius: 8rpx;
    position: relative;
}