/**app.wxss**/
 @import '/common/common.wxss';
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box
} 
/*复选框样式*/
.checkbox_item,.checkBox{
    display: inline-block;
    margin-right: 5rpx;
    border: 1px solid #aaa;
    width: 35rpx;
    height:35rpx;
    -webkit-box-sizing: border-box;
    -moz-box-sizing: border-box;
    -o-box-sizing: border-box;
    -ms-box-sizing: border-box;
    box-sizing: border-box;
}
.checkbox_item{
   border-radius:8rpx;
}
.checkBox{
   border-radius:100%;
   margin-top:70rpx
}
.checkbox_item.active ,.checkBox.active{
    background: #45cdc6;
    position: relative;
    border:none;
}
.checkbox_item.active:after,.checkBox.active:after {
    position: absolute;
    content: '';
    width: 20rpx;
    height: 15rpx;
    border: 2px solid #ffffff;
    border-top: none;
    border-right: none;
    left: 0.20rem;
    top: 0.20rem;
    -webkit-box-sizing: border-box;
    -moz-box-sizing: border-box;
    -o-box-sizing: border-box;
    -ms-box-sizing: border-box;
    box-sizing: border-box;
    -webkit-transform: rotate(-45deg);
    -moz-transform: rotate(-45deg);
    -ms-transform: rotate(-45deg);
    -o-transform: rotate(-45deg);
    transform: rotate(-45deg);
}
.checkbox_item checkbox ,.checkBox checkbox{
    visibility: hidden;
}
.checkbox_item radio ,.checkBox radio{
    visibility: hidden;
}
/*按钮样式*/
.mod_btn {
    background: #45cdc6;
    color: #fff;
    display: block;
    -webkit-box-flex: 1;
    -webkit-flex: 1;
    flex: 1;
    border: 0;
    margin: 0 auto;
    width: 100%;
    height: 92rpx;
    margin-top: 50rpx;
    line-height: 92rpx;
    text-align: center;
    font-size: 32rpx;
    border-radius: 8rpx;
    position: relative;
}
.combtn {
    background: #45cdc6;
    color: #fff;
    border: 0;
    width: 100%;
    height: 92rpx;
    line-height: 92rpx;
    text-align: center;
    font-size: 32rpx;
    position: fixed;
    bottom:0
}
/*底部导航*/
.flex-h {
  display: box;
  display: flex; 
  -webkit-box-orient: horizontal;
  -webkit-flex-direction: row;
  -moz-flex-direction: row;
  -ms-flex-direction: row;
  -o-flex-direction: row;
  flex-direction: row;
}

/* 父元素-水平两端对齐（主轴是横向才生效） */
.flex-hsb {
  -webkit-box-pack: space-between;
  -webkit-justify-content: space-between;
  -moz-justify-content: space-between;
  -ms-justify-content: space-between;
  -o-justify-content: space-between;
  justify-content: space-between;
}

/* 父元素-水平居中（主轴是横向才生效） */
.flex-hc {
  -webkit-box-pack: center;
  -webkit-justify-content: center;
  -moz-justify-content: center;
  -ms-justify-content: center;
  -o-justify-content: center;
  justify-content: center;
}

/* 父元素-纵向排列（主轴） */
.flex-v {
  display: box;
  display: -webkit-box;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-flex-direction: column;
  -moz-flex-direction: column;
  -ms-flex-direction: column;
  -o-flex-direction: column;
  flex-direction: column;
}

/* 父元素-竖直居中（主轴是横向才生效） */
.flex-vc {
  -webkit-box-align: center;
  -webkit-align-items: center;
  -moz-align-items: center;
  -ms-align-items: center;
  -o-align-items: center;
  align-items: center;
}

/*tabBar*/
.tab-bar {
  position:fixed;
  z-index: 99999;
  width: 100%;
  height: 100rpx;
  font-size: 22rpx;
  bottom:0;
  color: #9b9b9b;
  background: #fff;
  text-align: center;
  border-top:1px solid #ccc
}

.tab-bar .menu-item {
  display: block;
  flex: 1;
  height: 100%;
}

.tab-bar .menu-item image {
  margin: 10rpx auto 0 auto;
  display: block;
  width: 50rpx;
  height: 50rpx;
}

.tab-bar .menu-item.active {
  color: #53df87;
}
